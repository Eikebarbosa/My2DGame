CREATE DATABASE IF NOT EXISTS jogo_rpg_vestibular;
USE jogo_rpg_vestibular;
CREATE TABLE IF NOT EXISTS Aluno (
    idAluno INT AUTO_INCREMENT PRIMARY KEY,
    nomeAluno VARCHAR(255),
    senhaAluno VARCHAR(255)
);

CREATE TABLE IF NOT EXISTS Jogo (
    idJogo INT AUTO_INCREMENT PRIMARY KEY,
    idAluno INT,
    FOREIGN KEY (idAluno) REFERENCES Aluno(idAluno)
);

CREATE TABLE IF NOT EXISTS Pergunta (
    idPergunta INT AUTO_INCREMENT PRIMARY KEY,
    textoPergunta TEXT,
    respostaCorreta VARCHAR(255)
);

CREATE TABLE IF NOT EXISTS Resposta (
    idResposta INT AUTO_INCREMENT PRIMARY KEY,
    idJogo INT,
    idPergunta INT,
    respostaDada VARCHAR(255),
    acertou BOOLEAN,
    FOREIGN KEY (idJogo) REFERENCES Jogo(idJogo),
    FOREIGN KEY (idPergunta) REFERENCES Pergunta(idPergunta)
);

CREATE TABLE IF NOT EXISTS Pontuacao (
    idPontuacao INT AUTO_INCREMENT PRIMARY KEY,
    idJogo INT,
    pontosAcertos INT,
    pontosErros INT,
    FOREIGN KEY (idJogo) REFERENCES Jogo(idJogo)
);

